<script>
    // ====== CONFIGURA AQU√ç TU WEBHOOK DE MAKE ======
    // Reemplaza el texto entre comillas por la URL del webhook de Make
    const WEBHOOK_URL = "TU_URL_WEBHOOK_AQUI";

    const frm = document.getElementById('frmRecepcion');
    const msgForm = document.getElementById('msgForm');

    frm.addEventListener('submit', async function (e) {
        e.preventDefault();

        msgForm.textContent = "Enviando recepci√≥n...";
        msgForm.className = "mensaje-form";

        const btn = frm.querySelector('button[type="submit"]');
        btn.disabled = true;

        const ahora = new Date();
        const fechaISO = ahora.toISOString().split('T')[0];
        const hora = ahora.toTimeString().split(' ')[0];

        const datos = {
            Fecha: fechaISO,
            Hora: hora,
            TipoCliente: frm.TipoCliente.value,
            NombreCliente: frm.NombreCliente.value,
            Telefono: frm.Telefono.value,
            Correo: frm.Correo.value,
            Marca: frm.Marca.value,
            Modelo: frm.Modelo.value,
            Ano: frm.Ano.value,
            Placas: frm.Placas.value,
            Kilometraje: frm.Kilometraje.value,
            FechaCompromiso: frm.FechaCompromiso.value,
            TrabajoSolicitado: frm.TrabajoSolicitado.value,
            Observaciones: frm.Observaciones.value,
            AutorizaPruebaManejo: frm.AutorizaPruebaManejo.checked ? "S√≠" : "No",
            Origen: "Web Recepci√≥n Salvatori"
        };

        try {
            const resp = await fetch(WEBHOOK_URL, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(datos)
            });

            if (resp.ok) {
                msgForm.textContent = "¬°Recepci√≥n enviada correctamente! Te contactaremos para confirmar.";
                msgForm.className = "mensaje-form mensaje-ok";
                frm.reset();
            } else {
                msgForm.textContent = "Hubo un problema al enviar la informaci√≥n. Intenta de nuevo o cont√°ctanos por WhatsApp.";
                msgForm.className = "mensaje-form mensaje-error";
            }
        } catch (err) {
            console.error(err);
            msgForm.textContent = "Error de conexi√≥n. Revisa tu internet o env√≠anos un mensaje por WhatsApp.";
            msgForm.className = "mensaje-form mensaje-error";
        } finally {
            btn.disabled = false;
        }
    });
</script>

